@model IEnumerable<DAL.Promocion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="titulos_cat">PROMOCIONES</h1>
<br />

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenPromocion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                    @if (item.ImagenPromocion != null && item.ImagenPromocion.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ImagenPromocion))" width="100" />
                    }
                    else
                    {
                        <span class="text-muted">No se cargó una imagen</span>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PromocionId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PromocionId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.PromocionId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<br />
<p>
    <a asp-action="Create" class="w-70 btn btn-lg  btn-dark"
       style="background-color:pink; color: black;">Agregar nueva promoción</a>
</p>