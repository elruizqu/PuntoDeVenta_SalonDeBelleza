                            <option value="0" selected="@Model.Estado == 0">Desactivada</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg  btn-dark" style="background-color:pink;
    color: black;"> Guardar</button>
