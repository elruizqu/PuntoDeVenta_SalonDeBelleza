@model IEnumerable<DAL.ListaDeseo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.Cliente.Nombre @item.Cliente.Apellido
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ListaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ListaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ListaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
