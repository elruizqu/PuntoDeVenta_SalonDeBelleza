@model DAL.ListaDeseoProducto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />





<div class="home">
    <h1>Agregar producto a lista de deseos</h1>
    <hr />
    <br />
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ListaID" />
            <div class="form-group">
                <label asp-for="ProductoId" class="control-label"></label>
                <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId" disabled="disabled"></select>
                <input type="hidden" asp-for="ProductoId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="w-100 btn btn-lg  btn-dark" />
                <br />
                <br />
                    <a class="w-40 btn btn-lg  btn-dark" style="background-color:pink; color: black;" asp-controller="Productos" asp-action="CatalogoProd">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
