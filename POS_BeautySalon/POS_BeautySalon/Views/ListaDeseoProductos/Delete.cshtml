@model DAL.ListaDeseoProducto

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />

<div class="fondoTransparente">
    <h3>¿Seguro que quieres eliminar este producto de tu lista de deseos?</h3>
    <br />
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            <h4>@Html.DisplayFor(model => model.Producto.Nombre)</h4>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ListaDeseoProductoId" />
        <input type="submit" value="Eliminar" class="btn btn-dark" /> 
        <a class="btn" style="background-color:pink; color: black;" asp-action="Index">Volver a la lista</a>
    </form>
</div>
