@model DAL.Producto

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row fondoTransparente">
    <h1>Crear Producto</h1>
    <hr />
    <br />
        <div class="col-md-7">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="form-label">Nombre del Producto</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del producto" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger"})
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="form-label">Descripción del Producto</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese la descripción del producto"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ImagenProducto" class="form-label">Imagen del Producto</label>
                    <input type="file" accept="image/png" class="form-control" name="ImagenProducto" />
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="form-label">Precio de Venta</label>
                    <input asp-for="Precio" class="form-control" placeholder="Ingrese el precio de venta del producto" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioProveedor" class="form-label">Precio de Compra</label>
                    <input asp-for="PrecioProveedor" class="form-control" placeholder="Ingrese el precio de compra del producto" />
                    <span asp-validation-for="PrecioProveedor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoriaId" class="form-label">Categoría del Producto</label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="MarcaId" class="form-label">Marca del Producto</label>
                    <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ProveedorId" class="form-label">Proveedor del Producto</label>
                    <select asp-for="ProveedorId" class="form-control" asp-items="ViewBag.ProveedorId"></select>
                </div>
                <div class="text-center">
                <input type="submit" style="background-color:pink; color: black;" value="Crear" class="w-50 btn btn-lg  btn-dark" />
                <a asp-action="Index" class="w-100 btn btn-lg btn-dark">Volver a la lista</a>
                </div>
            </form>
        </div>
 
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}